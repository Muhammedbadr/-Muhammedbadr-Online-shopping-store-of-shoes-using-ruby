<div class="container my-4">
  <div class="row">
    <div class="col-md-7">
      <% @products.each do |product| %>
        <div class="card m-3 p-0 shadow-sm" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4 d-flex justify-content-center align-items-center">
              <%= image_tag(product.image_url, class: "img-fluid rounded-3") %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title fs-5 text-truncate"><%= product.name %></h5>
                <p class="card-text text-muted"><%= product.details %></p>
              </div>
              <div class="card-footer d-flex justify-content-between align-items-center">
                <p class="card-text mb-0" style="font-weight: bold;">السعر: <%= product.price %>$</p>
                <a href="#" class="btn btn-primary btn-sm">شراء</a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-md-5">
      <div class="card text-dark bg-light m-3 shadow-sm" style="max-width: 540px;">
        <div class="card-header text-center">سلة المشتريات</div>
        <div class="card-body">
            <p class="card-text">عدد المنتجات الكلي: <%= @products_count%></p>
            <p class="card-text">السعر الكلي للمنتجات: <span class="text-success text-bold"><%= @total_price %>$    </span></p>
        </div>
      </div>
    </div>
  </div>
</div>
