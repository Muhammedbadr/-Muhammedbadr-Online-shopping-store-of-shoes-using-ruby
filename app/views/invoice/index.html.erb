<div class="container cards-container my-3">
    <div class="row">
        <% if @invoices.empty? %>
            <h4 class="text-center">لا توجد منتجات داخل السلة</h4>
        <% else %>
            <% @invoices.each do |invoice| %>
                <div class="card m-2 p-0" style="max-width: 720px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <%= image_tag(invoice.product.image_url, class: "img-fluid rounded-start h-100 object-fit-cover") %>
                        </div>
                        <div class="col-md-8 ">
                            <div class="card-body">
                                <h5 class="card-title"><%= invoice.product.name %></h5>
                                <p class="card-text"><%= invoice.product.details %></p>
                            </div>
                            <div class="card-footer">
                              <form action="/review/create" method="post">
                                <input class="form-control my-1" type="text" name="review_text" placeholder="ملاحظات على المنتج" style="width: 100%;">
                                <div class="d-flex my-1" style="width: 100%;">
                                    <input class="form-control" type="number" name="rating" placeholder="التقيم من خمس نجوم" min="0" max="5" style="margin-left: 2rem">
                                    <button class="btn btn-primary ms-auto">إرسال</button>
                                </div>
                                <input type="hidden" name="invoice_id" value="<%= invoice.id %>">
                              </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</div>
