<div class="container my-2">
  <div class="d-flex align-items-center justify-content-between bg-light border rounded-4 shadow p-4">
    <!-- Product Image -->
    <div class="flex-shrink-0 me-2">
      <%= image_tag(@product.image_url, class: "img-fluid rounded-4 shadow-lg w-75") %>
    </div>
    <!-- Product Details -->
    <div class="flex-grow-1">
      <div class="mb-3">
        <span class="badge bg-secondary text-uppercase px-3 py-2 shadow-sm">
          <%= @product.category.title %> - x <%= @product.size %>
        </span>
      </div>
      <h3 class="fw-bold text-dark mb-3"><%= @product.name %></h3>
      <h2 class="text-primary fw-bold mb-4">$<%= @product.price %></h2>
      <a href="#" class="btn btn-primary btn-lg mb-4 px-5 py-3 shadow-sm rounded-pill">تفاصيل المنتج</a>
      <p class="text-muted fs-5"><%= @product.details %></p>
    </div>
  </div>
</div>
